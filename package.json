{
  "name": "csso",
  "private": true,
  "version": "0.2.0",
  "displayName": "csso",
  "description": "Minify CSS with CSSO",
  "publisher": "1000ch",
  "author": "1000ch",
  "repository": "https://github.com/1000ch/vscode-csso",
  "homepage": "https://github.com/1000ch/vscode-csso#readme",
  "bugs": "https://github.com/1000ch/vscode-csso/issues",
  "license": "MIT",
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "vscode:prepublish": "npm run build",
    "build": "tsc -p . && uglifyjs -o out/extension.js out/extension.js"
  },
  "engines": {
    "vscode": "^1.20.0"
  },
  "qna": "https://stackoverflow.com/questions/tagged/vscode+csso",
  "activationEvents": [
    "onCommand:csso.minify"
  ],
  "main": "out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "csso configuration options",
      "properties": {
        "csso.restructure": {
          "type": "boolean",
          "default": true,
          "description": "Structure optimisations"
        }
      }
    },
    "commands": [
      {
        "command": "csso.minify",
        "title": "Minify CSS"
      }
    ]
  },
  "dependencies": {
    "csso": "^3.5.0",
    "vscode-set-text": "^1.0.0"
  },
  "devDependencies": {
    "@types/csso": "^3.5.0",
    "@types/node": "^10.12.0",
    "typescript": "^3.1.3",
    "uglify-es": "^3.3.9",
    "vscode": "^1.1.21"
  }
}
